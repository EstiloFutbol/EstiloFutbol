{
  "version": 2,
  "builds": [
    { "src": "src/frontend/**/*", "use": "@vercel/static" },
    { "src": "src/backend/app/main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/backend/app/main.py" },
    { "src": "/(.*)", "dest": "src/frontend/$1" }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}